/* pages/activity_detail/activity_detail.wxss */
html, page, .main-container {
    height: 100%;
    background: #E9E9E9;
}

.activity-image {
  width: 100%
}

.activity-title {
  margin: 30rpx;
}

.activity-context {
  margin: 30rpx;
  font-size: 30rpx;
}

.activity-name {
    display: flex;
    align-items: center;
    font-size: 32rpx;
}

.activity-name image {
    width: 40rpx;
    height: 40rpx;
    padding: 20rpx 30rpx;
}

.activity-time {
    padding-left: 30rpx;
    font-size: 32rpx;
}

.coupons-item {
    background: #FFFFFF;
    display: flex;
    margin: 20rpx 10rpx;
    position: relative;
    height: 200rpx;
}
.coupons-left {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20rpx;
}
.coupons-left image {
    width: 100rpx;
    height: 69rpx;
}
.coupons-title {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    font-size: 30rpx;
}
.coupons-price {
  color: red;
  font-size: 30rpx;
}
.coupons-type {
    display: flex;
    font-size: 30rpx;
}
.coupons-content {
    font-size: 26rpx;
    color: #A7A7A7;
    margin: 0rpx 0;
}
.coupons-time {
    display: flex;
    justify-content:flex-start;
    align-items: flex-start;
    font-size: 30rpx;
    color: #A7A7A7;
    margin: 0rpx 0 0rpx 0;
}
.coupons-right {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    background: #D9BA6A;
    position: absolute;
    right: 0;
    height: 100%;
    width: 150rpx;
}
.coupons-right-gray {
    display: flex;
    align-items: center;
    justify-content: center;
    background: #A1A1A1;
    position: absolute;
    right: 0;
    height: 100%;
    width: 150rpx;
}
.coupons-right text, .coupons-right-gray text {
    font-size: 30rpx;
    color: #FFFFFF;
    font-weight: 600;
}

.coupons-center {
    display: flex;
    flex-direction: column;
    justify-content:center; 
    width: 11rem;
}

.remnant, .count {
    color: #FFFFFF;
    font-size: 32rpx;
}

.get-btn {
    padding: 5rpx 20rpx;
    background: #FFFFFF;
    color: #D9BA6A;
    border-radius: 20rpx;
    font-size: 32rpx;
    font-weight: 600;
}

.has-get-btn {
    padding: 5rpx 20rpx;
    background: #E9E9E9;
    color: #D9BA6A;
    border-radius: 20rpx;
    font-size: 32rpx;
    font-weight: 600;
}

.line {
    width: 100%;
    height: 5rpx;
    background: #D8D8D8;
}

.instr_detail {
  margin: 10rpx 10rpx;
  font-size: 30rpx;
}