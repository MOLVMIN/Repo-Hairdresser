/* pages/my_focus/my_focus.wxss */
.swiper-tab {
    width: 100%;
    /* border-bottom: 2rpx solid #777; */
    text-align: center;
    line-height: 80rpx;
    display: flex;
    flex: 2;
}

.swiper-tab-list {
    font-size: 30rpx;
    display: inline-block;
    flex: 1;
    color: #777;
}

.on {
    color: #da7c0c;
    border-bottom: 5rpx solid #da7c0c;
}

.baseInfo {
    display: flex;
    align-items: center;
}

.name {
    margin-left: 20rpx;
}

.store-item {
    height: 150rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 30rpx;
    border-bottom: 1rpx solid #e9e9e9;
}

.avatar-container {
    display: flex;
    align-items: center;

}

.avatar-container image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
}

.focus-btn {
    margin: 0 20rpx;
    height: 60rpx;
    padding: 0 10rpx;
    line-height: 60rpx;
    text-align: center;
    color: #BF9E4D;
    border: 1rpx solid #BF9E4D;
    border-radius: 8rpx;
    font-size: 36rpx;
}