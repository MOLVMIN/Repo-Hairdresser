/* pages/appointment_detail/appointment_detail.wxss */
.waiting-container {
    padding: 30rpx;
}

.waiting-number {
  background: #fff;
  display: flex;
  align-items: center;
}

.waiting-number image {
    width: 16rpx;
    height: 27rpx;
}

.waiting-time {
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 0;
}

.number-text {
  color: #c3aa64;
  font-size: 30rpx;
}

.number-number {
  color: #e26924;
  font-weight: bold;
}

.cancle-btn {
  margin-left: 20rpx;
  height: 60rpx;
  width: 120rpx;
  line-height: 60rpx;
  text-align: center;
  color: #bf9e4d;
  border: 1rpx solid #bf9e4d;
  border-radius: 8rpx;
  font-size: 36rpx;
}

.list-item-container {
  background: #fff;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.list-item-container view {
  color: #bebebe;
  font-size: 30rpx;
}

.master image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}

.master text {
  color: #000;
  font-weight: bold;
  font-size: 40rpx;
}

.pay-btn {
    height: 120rpx;
    width: 100%;
    background: #d9ba6a;
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    justify-content: center;
    align-items: center;
}

.remain-time {
  color: red;
  font-weight: bold;
}