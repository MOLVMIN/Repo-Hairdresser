/* pages/my/my.wxss */

html, page, .main-container {
  height: 100%;
  background: #e9e9e9;
}

.base-container {
  /* display: flex;
  justify-content: center;
  align-items: center; */
  position: relative;
  height: 460rpx;
  width: 100%;
  background-size:cover;
  background-position: center center;
  background-repeat: no-repeat;
  background-image: url(https://htl.mlww.info/images/f/69);
}

.user-info {
  margin:auto; 
  top: 0; right: 0; bottom: 0; left: 0;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: absolute;
  z-index: 99;
}

.user-info-image {
  height: 200rpx;
  width: 200rpx;
  border-radius: 100rpx;
}

.user-info-text {
  margin-top: 20rpx;
  color: #fff;
  font-weight: 700;
}

.order-container {
  background: #fff;
}

.my-order, .my-voucher {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #e9e9e9;
  height: 120rpx;
  margin: 0 30rpx;
}

.order-title, .voucher-title {
  /*font-size: 40rpx;*/
  font-weight: 700;
}

.more text {
  font-size: 32rpx;
  color: #9a9a9a;
}

.more image {
  width: 16rpx;
  height: 27rpx;
  margin-left: 20rpx;
}

.order-menu {
  display: flex;
  align-items: center;
}

.menu-item {
  width: 33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
}

.menu-item image {
  width: 60rpx;
  height: 60rpx;
}

.menu-item text {
  margin-top: 20rpx;
  font-size: 32rpx;
}

.voucher-container {
  display: flex;
  justify-content: center;
  align-items: center;
}

.voucher-count {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  border-radius: 25rpx;
  background: #f34b2f;
  margin-left: 10rpx;
  font-size: 30rpx;
}

.line {
  height: 20rpx;
  background: #e9e9e9;
}

.smallLine {
  height: 10rpx;
  background: #e9e9e9;
}

.smallestLine {
  height: 5rpx;
  background: #e9e9e9;
}

.waiting-container {
  background: #fff;
  padding: 30rpx;
  /* display: flex; */
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #e9e9e9;
  margin: 0 10rpx;
}

.waiting-number {
  background: #fff;
  display: flex;
  align-items: center;
}

.waiting-number image {
    width: 16rpx;
    height: 27rpx;
}

.waiting-time {
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 0;
}

.number-text {
  color: #c3aa64;
  font-size: 30rpx;
}

.number-number {
  color: #e26924;
  font-weight: bold;
}

.cancle-btn {
  margin-left: 20rpx;
  height: 60rpx;
  width: 120rpx;
  line-height: 60rpx;
  text-align: center;
  color: #bf9e4d;
  border: 1rpx solid #bf9e4d;
  border-radius: 8rpx;
  font-size: 36rpx;
}

.list-item-container {
  background: #fff;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.list-item-container view {
  color: #bebebe;
  font-size: 30rpx;
}

.master image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}

.master text {
  color: #000;
  font-weight: bold;
  font-size: 40rpx;
}

.balance-container {
  background: #fff;
  padding: 0rpx 0rpx 0rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.balance-left {
  font-weight: bold;
}

.balance-right {
  background: #fff;
  display: flex;
  align-items: center;
}

.balance-text {
  color: #F17728;
  font-weight: bold;
}

.balance-btn {
  margin-left: 20rpx;
  height: 120rpx;
  width: 280rpx;
  line-height: 120rpx;
  text-align: center;
  color: #fff;
  background-color: #bf9e4d;
  font-size: 36rpx;
}

.complete-item-container {
  background: #fff;
  padding: 15rpx 30rpx 15rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.complete-item-container view {
  color: #bebebe;
  font-size: 30rpx;
}

.complete-item-container-OldMoney {
  text-decoration:line-through;
}

.subtotal-container {
  background: #fff;
  padding: 10rpx 30rpx 25rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.comlete-select-container {
  background: #fff;
  padding: 25rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.focus-btn {
    margin-left: 20rpx;
    height: 60rpx;
    padding: 0 20rpx;
    line-height: 60rpx;
    text-align: center;
    color: #BF9E4D;
    border: 1rpx solid #BF9E4D;
    border-radius: 8rpx;
    font-size: 36rpx;
}

.meted-btn {
  margin-left: 20rpx;
  height: 60rpx;
  width: 200rpx;
  line-height: 60rpx;
  text-align: center;
  color: #bf9e4d;
  border: 1rpx solid #bf9e4d;
  border-radius: 8rpx;
  font-size: 36rpx;
}
