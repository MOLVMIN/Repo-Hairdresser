/* pages/hair_detail/hair_detail.wxss */

page, html {
  width: 100%;
}

swiper {
  height: 400rpx;
  width: 100%;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.line {
  height: 20rpx;
  background: #e9e9e9;
}

.insertline {
  height: 5rpx;
  background: #e9e9e9;
}

.hair {
  background: #fff;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.hair-info {
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  align-items:flex-start;
  margin-left: 10rpx;
}

.hair-info image {
  width: 100rpx;
  height: 100rpx;
}

.hair-name {
  margin-left: 20rpx;
  font-size: 34rpx;
  font-weight: 700;
}

.hair-phone {
  margin-left: 20rpx;
  font-size: 30rpx;
}

.wait-info {
  font-size: 28rpx;
  color: #9a9a9a;
  margin-top: 10rpx;
}

.hair-status {
  display: flex;
}

.fans-container {
  width: 120rpx;
  height: 110rpx;
  vertical-align: center;
  align-items: center;
  color: #fff;
  text-align: center;
  display: flex;
  flex-direction: column;
}

.fans-container {
  background: #cb9e29;
}

.fans {
  display: flex;
  flex: 3;
  align-items: center;
}

.fans-count {
  flex: 4;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
}

.fans view {
  font-size: 28rpx;
}

.fans image {
  width: 20rpx;
  height: 20rpx;
}

.focus-container {
  background: #d9ba6a;
  width: 120rpx;
  height: 110rpx;
  vertical-align: center;
  align-items: center;
  color: #fff;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.focus-container view {
  font-size: 28rpx;
}

.focus-container image {
  width: 50rpx;
  height: 50rpx;
}

.Address {
  padding: 30rpx;
}

.store_info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.store_name {
  font-size: 34rpx;
  font-weight: 700;
}

.store_more {
  display: flex;
  align-items: center;
}

.store_more view {
  font-size: 28rpx;
  color: #9a9a9a;
}

.store_more image {
  width: 20rpx;
  height: 20rpx;
  margin-left: 10rpx;
}

.location-container {
  margin-top: 20rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.location, .nav {
  display: flex;
  align-items: center;
}

.location image {
  width: 31rpx;
  height: 39rpx;
}

.location view {
  font-size: 28rpx;
  color: #9a9a9a;
  margin-left: 20rpx;
  width: 10rem;
}

.distance {
  font-size: 30rpx;
  color: #9a9a9a;
  margin-left: 20rpx;
}

.nav-btn {
  margin-left: 20rpx;
  height: 60rpx;
  width: 120rpx;
  line-height: 60rpx;
  text-align: center;
  color: #bf9e4d;
  border: 1rpx solid #bf9e4d;
  border-radius: 8rpx;
  font-size: 36rpx;
}

.works {
  padding: 30rpx;
}

.works_info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.works_title {
  font-size: 34rpx;
  font-weight: 700;
}

.works_more {
  display: flex;
  align-items: center;
}

.works_more view {
  font-size: 28rpx;
  color: #9a9a9a;
}

.works_more image {
  width: 20rpx;
  height: 20rpx;
  margin-left: 10rpx;
}

.works_show {
  width: 100%;
  display: inline-block;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx;
  white-space: nowrap;
}

.works_show image {
  width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx;
}

.evaluate-list {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.evaluate-title {
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
}

.evaluate-title-left {
  font-weight: bold;
}

.evaluate-Satisfaction {
  display: flex;
  justify-content: center;
  align-items: center;
}

.evaluate-Satisfaction image {
  width: 30rpx;
  height: 30rpx;
}

.evaluate-Satisfaction text {
  font-size: 30rpx;
  color: #9a9a9a;
  margin-left: 10rpx;
}

.evaluate-item {
  /* border-bottom: 1rpx solid #d9ba6a; */
}

.evaluate-content {
  background: #fff;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.evaluate-content image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
}

.evaluate-content-info {
  display: flex;
  align-items: center;
}

.evaluate-base-info {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.evaluate-base-info-top {
  display: flex;
  height: 60rpx;
  align-items: center;
}

.evaluate-base-info-bottom {
  color: #9a9a9a;
  font-size: 30rpx;
}

.evaluate-name {
  font-size: 30rpx;
  /* font-weight: 700; */
}

.start_level {
  display: flex;
  align-items: center;
}

.start_level image {
  width: 30rpx;
  height: 30rpx;
}

.start_level text {
  color: #9a9a9a;
  margin-left: 20rpx;
  font-size: 30rpx;
}

.evaluate-text {
  padding: 15rpx 30rpx;
  /* color: #9a9a9a; */
  font-size: 30rpx;
}

.orderBtn {
  text-align: center;
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  background-color: #d9ba6a;
  position: fixed;
  left: 0;
  bottom: 0;
}
