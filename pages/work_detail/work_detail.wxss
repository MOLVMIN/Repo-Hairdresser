/* pages/work_detail/work_detail.wxss */
.swiper-tab {
    width: 100%;
    /* border-bottom: 2rpx solid #777; */
    text-align: center;
    line-height: 80rpx;
}

.swiper-tab-list {
    font-size: 30rpx;
    display: inline-block;
    width: 20%;
    color: #777;
}

.on {
    color: #da7c0c;
    border-bottom: 5rpx solid #da7c0c;
}

.line {
    height: 10rpx;
    background: #e9e9e9;
}

.insertline {
    height: 5rpx;
    background: #e9e9e9;
}

.main-context {
    padding: 0rpx 30rpx 0rpx 30rpx;
}

.list {
    display: flex;
    justify-content: space-between;
    padding: 30rpx 0rpx;
}

.work-info {
    display: flex;
    justify-content: center;
    width: 100%;
}

.work-author {
    display: flex;
    /* justify-content:space-between;
  flex-direction: column; */
}

.avatar {
    width: 80rpx;
    height: 80rpx;
}

.work-show {
    /* margin-left: 30rpx; */
    width: 100%;
}

.work-show image {
    width: 100%;
}

.work-show-name {
    padding: 10rpx 0rpx;
    font-weight: bold;
    font-size: 30rpx;
}

.work-show-time {
    padding: 10rpx 0rpx;
    font-size: 32rpx;
    color: #9a9a9a;
}

.work-describe {
    padding: 10rpx 0rpx;
    font-size: 32rpx;
    color: #9a9a9a;
}

.work-pic {
    width: 400rpx;
    height: 400rpx;
}

.work-btn {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
}

.delete {
    margin-left: 20rpx;
    height: 60rpx;
    width: 120rpx;
    line-height: 60rpx;
    text-align: center;
    color: #bf9e4d;
    border: 1rpx solid #bf9e4d;
    border-radius: 8rpx;
    font-size: 36rpx;
}

.uploadBtn {
    text-align: center;
    width: 100%;
    height: 120rpx;
    line-height: 120rpx;
    background-color: #d9ba6a;
    font-weight: bold;
    position: fixed;
    left: 0;
    bottom: 0;
}
